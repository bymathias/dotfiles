#!/bin/bash

# Basic
alias ls='ls --color=auto --group-directories-first'
alias o='thunar &'
alias ff='/usr/bin/firefox &'

# Nginx
alias nginx-start='sudo /etc/init.d/nginx start'
alias nginx-restart='sudo /etc/init.d/nginx restart'
alias nginx-stop='sudo /etc/init.d/nginx stop'
alias nginx-info='/opt/nginx/sbin/nginx -V'
alias nginx-test='sudo /opt/nginx/sbin/nginx -t'

# PHP-FPM
alias php-start='sudo /etc/init.d/php5-fpm start'
alias php-restart='sudo /etc/init.d/php5-fpm restart'
alias php-stop='sudo /etc/init.d/php5-fpm stop'

# Mysql
alias mysql-start='sudo /etc/init.d/mysql start'
alias mysql-restart='sudo /etc/init.d/mysql restart'
alias mysql-stop='sudo /etc/init.d/mysql stop'
