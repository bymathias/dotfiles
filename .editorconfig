# ~/.editorconfig
#
# Help make the world a better place
# ref: http://editorconfig.org/

# top-most EditorConfig file
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{markdown,mkd,md}]
indent_size = 4
trim_trailing_whitespace = false

[*{html,htm}]
max_line_length = 120

[*.php]
indent_size = 4
max_line_length = 120
