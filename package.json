{
  "name": "dotfiles",
  "version": "1.1.0",
  "description": "Config files to setup a system (debian) the way I want it, hopefully useful also for others.",
  "author": "Mathias Brouilly",
  "license": "MIT",
  "keywords": [
    "bash",
    "bin",
    "vim",
    "tmux",
    "git"
  ],
  "homepage": "https://github.com/bymathias/dotfiles#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bymathias/dotfiles.git"
  },
  "bugs": {
    "url": "https://github.com/bymathias/dotfiles/issues"
  },
  "scripts": {
    "commit": "git add . && git-cz",
    "release": "npm version -m 'chore(release): v%s'",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add .",
    "postversion": "git push && git push --tags",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "commitizen": "^2.9.6",
    "conventional-changelog-cli": "^1.3.5",
    "cz-conventional-changelog": "^2.1.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
