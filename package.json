{
  "name": "dotfiles",
  "version": "0.3.2",
  "private": true,
  "description": "Config files to setup a system (Debian/macOS) the way I want it.",
  "author": "Mathias Brouilly",
  "license": "MIT",
  "homepage": "https://github.com/bymathias/dotfiles#readme",
  "repository": {
    "type": "git",
    "url": "git+https://bymathias@github.com/bymathias/dotfiles.git"
  },
  "bugs": {
    "url": "https://github.com/bymathias/dotfiles/issues"
  },
  "scripts": {
    "docs": "docsify serve _docs",
    "prerelease": "npm install",
    "release": "npm version -m 'chore(release): v%s'",
    "version": "conventional-changelog -p angular -i docs/CHANGELOG.md -s && git add --all",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^1.2.0",
    "cz-conventional-changelog": "^1.2.0",
    "docsify": "^4.3.8"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
